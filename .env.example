# ===========================================
# Astro Frontend
# ===========================================
STRAPI_URL=https://cms.garrett-trott.com
STRAPI_API_TOKEN=your-api-token-here

# ===========================================
# Strapi CMS
# ===========================================
# Database (PostgreSQL)
DATABASE_CLIENT=postgres
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=change-this-secure-password

# Strapi Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here
ADMIN_JWT_SECRET=your-admin-jwt-secret-here
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=your-api-token-salt-here
TRANSFER_TOKEN_SALT=your-transfer-token-salt-here

# ===========================================
# n8n Webhook (for social posting)
# ===========================================
N8N_WEBHOOK_URL=https://n8n.yourdomain.com/webhook/social-post
