---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import GlassBackground from '../../components/GlassBackground.astro';
import { SITE_TITLE } from '../../consts';
import { getProjects, getStrapiMediaUrl, type Project } from '../../lib/strapi';

let projects: Project[] = [];
let error: string | null = null;

try {
	const response = await getProjects();
	projects = response.data?.map((item: any) => ({
		...item,
		...item.attributes,
	})) || [];
} catch (e) {
	error = 'Unable to load projects from CMS. Please ensure Strapi is running.';
	console.error('Failed to fetch projects:', e);
}
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<BaseHead title={`Projects | ${SITE_TITLE}`} description="Featured projects and work" />
	</head>
	<body class="bg-black text-white min-h-screen antialiased">
		<GlassBackground />
		<Header />

		<main class="relative z-10">
			<section class="container py-12">
				<div class="mb-10">
					<h1 class="text-2xl font-semibold mb-2">Projects</h1>
					<p class="text-white/50">
						A collection of projects I've worked on, from side projects to professional work.
					</p>
				</div>

				{error && (
					<div class="rounded-xl border border-yellow-500/20 bg-yellow-500/5 p-4 mb-8">
						<p class="text-sm text-yellow-200/80">{error}</p>
					</div>
				)}

				{projects.length > 0 ? (
					<div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
						{projects.map((project) => (
							<a href={`/projects/${project.slug}`} class="group block p-4 bg-white/[0.02] hover:bg-white/[0.05] border border-white/5 hover:border-white/10 rounded-xl transition-all">
								{project.thumbnail ? (
									<div class="aspect-video rounded-lg bg-white/5 overflow-hidden mb-4">
										<img
											src={getStrapiMediaUrl(project.thumbnail) || ''}
											alt=""
											class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity"
										/>
									</div>
								) : (
									<div class="aspect-video rounded-lg bg-white/[0.03] border border-white/5 mb-4 flex items-center justify-center">
										<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round" class="text-white/20">
											<rect width="18" height="18" x="3" y="3" rx="2" ry="2"/>
											<circle cx="9" cy="9" r="2"/>
											<path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/>
										</svg>
									</div>
								)}
								<h3 class="font-medium text-white/90 group-hover:text-white transition-colors mb-2">
									{project.title}
								</h3>
								<p class="text-sm text-white/40 line-clamp-2 mb-3">
									{project.description}
								</p>
								{project.technologies && project.technologies.length > 0 && (
									<div class="flex flex-wrap gap-1.5">
										{project.technologies.slice(0, 4).map((tech: string) => (
											<span class="text-xs px-2 py-0.5 bg-white/5 rounded text-white/50">
												{tech}
											</span>
										))}
									</div>
								)}
							</a>
						))}
					</div>
				) : !error && (
					<div class="p-8 border border-dashed border-white/10 rounded-xl text-center">
						<p class="text-white/40 mb-4">No projects yet. Add projects through the Strapi CMS.</p>
						<a href="http://localhost:1337/admin" class="inline-block px-4 py-2 bg-white/5 hover:bg-white/10 border border-white/10 rounded-lg text-sm text-white/70 hover:text-white transition-all">
							Open Strapi Admin
						</a>
					</div>
				)}
			</section>
		</main>

		<Footer />
	</body>
</html>
