---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GlassBackground from '../components/GlassBackground.astro';
import { SITE_TITLE } from '../consts';

const skills = {
	'Software': ['TypeScript', 'Python', 'React', 'Node.js', 'AWS', 'Terraform'],
	'Hardware': ['Arduino', 'Control Panels', 'PLC Wiring', '3D Printing', 'CAD Design'],
	'Building Systems': ['IoT Deployments', 'Home Automation'],
	'Audio': ['Pro Tools', 'Live Sound', 'Studio Recording', 'System Design'],
};
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<BaseHead title={`About | ${SITE_TITLE}`} description="Developer, audio engineer, building controls tech, and skydiver from Portland, Oregon" />
	</head>
	<body class="bg-black text-white min-h-screen antialiased">
		<GlassBackground />
		<Header />

		<main class="relative z-10">
			<section class="container py-12 max-w-2xl">
				<!-- whoami -->
				<div class="mb-10">
					<div class="flex items-center gap-2 text-white/50 font-mono text-sm mb-6">
						<span class="text-cyan-400">$</span>
						<span>whoami</span>
					</div>
					<div class="flex flex-col sm:flex-row items-start gap-6 mb-6">
						<div class="relative group">
							<div class="w-32 h-32 rounded-xl overflow-hidden border border-white/10 bg-white/[0.02] p-0.5">
								<img
									src="/GT_Profile.png"
									alt="Garrett Trott"
									class="w-full h-full object-cover rounded-[10px] grayscale group-hover:grayscale-0 opacity-90 group-hover:opacity-100 transition-all duration-300"
								/>
							</div>
							<div class="absolute -inset-1 bg-gradient-to-br from-purple-500/20 via-transparent to-cyan-500/20 rounded-xl blur-sm -z-10 opacity-50"></div>
						</div>
						<div class="flex-1">
							<h1 class="text-2xl font-semibold mb-1">Garrett Trott</h1>
							<p class="text-purple-400/80 font-mono text-sm mb-3">Developer / Maker / Generalist</p>
							<p class="text-white/50 text-sm leading-relaxed">
								Portland, OR
							</p>
						</div>
					</div>
				</div>

				<!-- About content -->
				<div class="mb-10">
					<div class="flex items-center gap-2 text-white/50 font-mono text-sm mb-4">
						<span class="text-cyan-400">$</span>
						<span>cat ./about.txt</span>
					</div>
					<div class="space-y-4 text-white/50 leading-relaxed p-4 bg-white/[0.02] border border-white/5 rounded-lg">
						<p>
							I build things—sometimes with code, sometimes with wires, sometimes formations while falling at 120 mph. With 15+ years in audio engineering, I've run front of house for international festivals and designed studio systems. As a building controls technician, I've deployed IoT networks and built PLC control panels for hydraulics and water distribution pumps. I've also spent two years as a skydiving instructor.
						</p>
						<p>
							Somewhere along the way I picked up software development, and now I build full-stack applications with TypeScript, React, and cloud infrastructure. But I'm just as likely to be prototyping with Arduino, wiring up control panels, or designing and 3D printing parts. Needless to say, I never stop learning.
						</p>
											</div>
				</div>

				<!-- Skills -->
				<div class="mb-10">
					<div class="flex items-center gap-2 text-white/50 font-mono text-sm mb-4">
						<span class="text-cyan-400">$</span>
						<span>ls ./skills</span>
					</div>
					<div class="grid sm:grid-cols-2 gap-4">
						{Object.entries(skills).map(([category, items]) => (
							<div class="p-4 bg-white/[0.02] border border-white/5 rounded-lg">
								<h3 class="text-sm font-medium text-white/70 mb-3 flex items-center gap-2">
									<span class="text-purple-400/60">./</span>{category}
								</h3>
								<div class="flex flex-wrap gap-2">
									{items.map((skill) => (
										<span class="text-xs px-2.5 py-1 bg-white/5 border border-white/5 rounded-md text-white/50 hover:text-white/70 hover:border-white/10 transition-colors">
											{skill}
										</span>
									))}
								</div>
							</div>
						))}
					</div>
				</div>

				<!-- Stats -->
				<div class="mb-10">
					<div class="flex items-center gap-2 text-white/50 font-mono text-sm mb-4">
						<span class="text-cyan-400">$</span>
						<span>wc -l ./experience/*</span>
					</div>
					<div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
						<div class="p-4 bg-white/[0.02] border border-white/5 rounded-lg text-center">
							<div class="text-2xl font-semibold text-white/80 mb-1">15+</div>
							<div class="text-xs text-white/40 font-mono">yrs audio</div>
						</div>
						<div class="p-4 bg-white/[0.02] border border-white/5 rounded-lg text-center">
							<div class="text-2xl font-semibold text-white/80 mb-1">1000+</div>
							<div class="text-xs text-white/40 font-mono">skydives</div>
						</div>
						<div class="p-4 bg-white/[0.02] border border-white/5 rounded-lg text-center">
							<div class="text-2xl font-semibold text-white/80 mb-1">80+</div>
							<div class="text-xs text-white/40 font-mono">repos</div>
						</div>
						<div class="p-4 bg-white/[0.02] border border-white/5 rounded-lg text-center">
							<div class="text-2xl font-semibold text-cyan-400/80 mb-1">∞</div>
							<div class="text-xs text-white/40 font-mono">projects</div>
						</div>
					</div>
				</div>

				<!-- Links -->
				<div class="pt-8 border-t border-white/5">
					<div class="flex items-center gap-2 text-white/50 font-mono text-sm mb-4">
						<span class="text-cyan-400">$</span>
						<span>cat ./links</span>
					</div>
					<div class="flex flex-wrap gap-3">
						<a
							href="https://github.com/garretttrott"
							target="_blank"
							class="flex items-center gap-2 px-4 py-2 bg-white/[0.03] hover:bg-white/[0.06] border border-white/5 hover:border-white/10 rounded-lg text-white/60 hover:text-white/90 transition-all font-mono text-sm"
						>
							<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
							</svg>
							gh
						</a>
						<a
							href="https://www.linkedin.com/in/garrett-trott/"
							target="_blank"
							class="flex items-center gap-2 px-4 py-2 bg-white/[0.03] hover:bg-white/[0.06] border border-white/5 hover:border-white/10 rounded-lg text-white/60 hover:text-white/90 transition-all font-mono text-sm"
						>
							<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
								<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
							</svg>
							in
						</a>
						<a
							href="https://twitter.com/GarrettTrott"
							target="_blank"
							class="flex items-center gap-2 px-4 py-2 bg-white/[0.03] hover:bg-white/[0.06] border border-white/5 hover:border-white/10 rounded-lg text-white/60 hover:text-white/90 transition-all font-mono text-sm"
						>
							<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
								<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
							</svg>
							x
						</a>
						<a
							href="mailto:dev@garrett-trott.com"
							class="flex items-center gap-2 px-4 py-2 bg-white/[0.03] hover:bg-white/[0.06] border border-white/5 hover:border-white/10 rounded-lg text-white/60 hover:text-white/90 transition-all font-mono text-sm"
						>
							<svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
								<rect width="20" height="16" x="2" y="4" rx="2"/>
								<path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
							</svg>
							mail
						</a>
					</div>
				</div>
			</section>
		</main>

		<Footer />
	</body>
</html>
