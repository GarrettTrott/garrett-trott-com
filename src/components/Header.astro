---
const pathname = Astro.url.pathname;
---

<header class="fixed top-0 z-50 w-full border-b border-white/5 bg-black/90 backdrop-blur-xl">
	<div class="container flex h-14 items-center justify-between">
		<!-- Logo -->
		<a href="/" class="flex items-center gap-2.5 group">
			<div class="w-9 h-9 relative logo-container">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 150 146" fill="none" class="w-full h-full">
					<defs>
						<linearGradient id="hg1" x1="0%" y1="0%" x2="100%" y2="100%">
							<stop offset="0%" stop-color="#a98fff" stop-opacity="0.7"/>
							<stop offset="50%" stop-color="#7d5fff" stop-opacity="0.4"/>
							<stop offset="100%" stop-color="#2f1b72" stop-opacity="0.15"/>
						</linearGradient>
						<linearGradient id="hg2" x1="0%" y1="100%" x2="100%" y2="0%">
							<stop offset="0%" stop-color="#7aeeff" stop-opacity="0.65"/>
							<stop offset="50%" stop-color="#29dfff" stop-opacity="0.35"/>
							<stop offset="100%" stop-color="#0ab3d6" stop-opacity="0.12"/>
						</linearGradient>
						<linearGradient id="hg3" x1="100%" y1="0%" x2="0%" y2="100%">
							<stop offset="0%" stop-color="#6bb8ff" stop-opacity="0.6"/>
							<stop offset="50%" stop-color="#188bff" stop-opacity="0.3"/>
							<stop offset="100%" stop-color="#0a5eb8" stop-opacity="0.1"/>
						</linearGradient>
						<linearGradient id="hsh" x1="0%" y1="0%" x2="60%" y2="60%">
							<stop offset="0%" stop-color="#ffffff" stop-opacity="0.4"/>
