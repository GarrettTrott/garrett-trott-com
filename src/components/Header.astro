						<path d="M75.79 99.76a36.88 36.88 0 0 1-35.55-25.13c-1.07-3.18-.53-4.74 3-5.27 2.9-.44 5.72-1.32 8.57-2 2-.49 3 .08 3.82 2.16 3.43 9 10.41 13.93 19.47 14 9.36.07 16-4.55 19.77-14 .89-2.23 2.08-2.69 4.2-2.14 2.84.74 5.72 1.34 8.57 2 4.15 1 4.3 1.33 2.88 5.51a37.15 37.15 0 0 1-34.73 24.87z" fill="url(#hshine)" transform="translate(35, 75) rotate(5, 75, 75) scale(1.2) translate(-10, -60)"/>
