						<path d="M75.79 99.76a36.88 36.88 0 0 1-35.55-25.13c-1.07-3.18-.53-4.74 3-5.27 2.9-.44 5.72-1.32 8.57-2 2-.49 3 .08 3.82 2.16 3.43 9 10.41 13.93 19.47 14 9.36.07 16-4.55 19.77-14 .89-2.23 2.08-2.69 4.2-2.14 2.84.74 5.72 1.34 8.57 2 4.15 1 4.3 1.33 2.88 5.51a37.15 37.15 0 0 1-34.73 24.87z" fill="url(#hsh)"/>
					</g>
					<!-- Shape 6: Purple bottom -->
					<g filter="url(#hgl)" class="logo-shape-6">
						<path d="M110 138.38c.13 2.07-1.09 2.73-2.34 3.27-2.7 1.15-5.46 2.15-8.16 3.31-2.52 1.09-3.86.48-5.07-2.15-6-13.16-21.77-16.63-32.89-7.44a19.24 19.24 0 0 0-5.66 8c-.8 2-2 2.6-4 1.78-2.83-1.15-5.68-2.27-8.53-3.35-2.65-1-3-2.59-1.94-5.17a37 37 0 0 1 67.5-1c.49 1 .81 2.06 1.09 2.75z" fill="url(#hg1)"/>
						<path d="M110 138.38c.13 2.07-1.09 2.73-2.34 3.27-2.7 1.15-5.46 2.15-8.16 3.31-2.52 1.09-3.86.48-5.07-2.15-6-13.16-21.77-16.63-32.89-7.44a19.24 19.24 0 0 0-5.66 8c-.8 2-2 2.6-4 1.78-2.83-1.15-5.68-2.27-8.53-3.35-2.65-1-3-2.59-1.94-5.17a37 37 0 0 1 67.5-1c.49 1 .81 2.06 1.09 2.75z" fill="url(#hsh)"/>
					</g>
				</svg>
			</div>
			<span class="font-mono text-sm text-white/80 group-hover:text-white transition-colors">
				garrett<span class="text-cyan-400">@</span>trott
			</span>
		</a>

		<nav class="flex items-center gap-1">
			<a
				href="/posts"
				class={`px-3 py-1.5 text-xs font-mono rounded-md transition-all ${pathname.startsWith('/posts') ? 'text-white bg-white/10' : 'text-white/50 hover:text-white hover:bg-white/5'}`}
			>
				./posts
			</a>
			<a
				href="/projects"
				class={`px-3 py-1.5 text-xs font-mono rounded-md transition-all ${pathname.startsWith('/projects') ? 'text-white bg-white/10' : 'text-white/50 hover:text-white hover:bg-white/5'}`}
			>
				./projects
			</a>
			<a
				href="/about"
				class={`px-3 py-1.5 text-xs font-mono rounded-md transition-all ${pathname === '/about' ? 'text-white bg-white/10' : 'text-white/50 hover:text-white hover:bg-white/5'}`}
			>
				whoami
			</a>

			<div class="ml-3 flex items-center gap-1 border-l border-white/10 pl-3">
				<a
					href="https://github.com/garretttrott"
					target="_blank"
					rel="noopener"
					class="p-2 text-white/40 hover:text-white transition-colors rounded-lg hover:bg-white/5"
					aria-label="GitHub"
				>
					<svg viewBox="0 0 24 24" width="16" height="16" fill="currentColor">
